
<div id="pets-banner">
<h1>Check out the amazing creatures available for rent!
</h1>
</div>

<div class="container">
<div class="d-flex flex-wrap">

<% @pets.each do |pet| %>
  <%= link_to pet_path(pet) do%>
  <div class="pet-card my-3 mx-3" >
    <h4><%= pet.name %></h4>
  <% if pet.photo.key != nil %>
    <%= cl_image_tag pet.photo.key, class: "index-img" %>
  <% end %>
  <div class="pet-text">
  <div class="d-flex justify-content-around">
  <p class="card-text"><strong>Species:</strong> <%= pet.species %> <p>
  <p class="card-text"><strong>Price:</strong> $<%= pet.price %></p>
</div>
</div>
</div>
  <% end %>
  <% end %>
  <%= link_to "New pet", new_pet_path if policy(Pet).new? %>
  </div>
</div>
