
<div class="container">

<div class="d-flex align-items-start flex-column w-75 justify-items-center m-auto">
<div class="mb-5 mt-1">
<%= link_to "Back to All Creatures",  pets_path, class: "btn btn-primary" %>
</div>

<h2 style="color:black, text-align: left, font-weight:700, font-size: 5em"><%= @pet.name %></h2>
<div class="d-flex align-items-start justify-items-center">
<img class="rounded-3 mb-3" src="<%= @pet.photo.url %>" style="width: 80%">

  </div>
  <div class="d-flex align-items-start justify-items-center">
  <div class="mb-3 me-5" style="width: 20%">
  <p class="text-start"><strong>Species:</strong>
  <%= @pet.species %></p>
  <p class="text-start"><strong>Age:</strong>
  <%= @pet.age %></p>
  <p class="text-start"><strong>Gender:</strong>
  <%= @pet.gender %></p>
  <%= link_to "Book this creature",  new_pet_booking_path(@pet), class: "btn btn-primary" %>

  </div>
<div class="mb-3 me-3" style="width: 50%">
  <p class="text-start"><strong>Description:</strong>
  <%= @pet.description %></p>
  <p class="text-start"><strong>Special Notes:</strong>
  <%= @pet.special_notes %></p>
  <p class="text-start"><strong>Price:</strong>
  $<%= @pet.price %></p>
</div>


</div>
</div>

</div>
<div>
  <% if policy(@pet).edit? %>
  <%= link_to "Edit this creature", edit_pet_path(@pet) %>
  <% end %>
  <%= button_to "Remove this creature", @pet, method: :delete if policy(@pet).destroy? %>
</div>
