
<div class="container mb-5 pb-5">
<h2 class="mt-5 pt-5 ms-5" style="color:black, text-align: center, font-weight:700, font-size: 5em"><strong><%= @pet.name %></strong></h2>

<div class="d-flex align-items-center w-75 justify-items-center m-auto">
<div class="mb-5 mt-1">
<%= link_to "Back to All Creatures",  pets_path, class: "btn btn-primary" %>
</div>

<div class="d-flex align-items-center flex-column justify-items-center">

<% if @pet.photo.key != nil %>
<%= cl_image_tag @pet.photo.key, class: "my-2 rounded-5 border border-primary border-3 shadow", style: "width: 80%" %>
<% end %>


  <div class="d-flex flex-column justify-items-center mt-3">
  <div class="d-flex justify-items-center mt-3">
  <div class="mb-3 me-5" style="width: 30%">
  <p class="text-start fs-5"><strong>Species:</strong>
  <%= @pet.species %></p>
  <p class="text-start fs-5"><strong>Age:</strong>
  <%= @pet.age %></p>
  <p class="text-start fs-5"><strong>Gender:</strong>
  <%= @pet.gender %></p>
  <%= link_to "Book this creature",  new_pet_booking_path(@pet), class: "btn btn-primary" %>

  </div>
<div class="mb-3 me-3" style="width: 60%">
  <p class="text-start fs-5 lh-sm"><strong>Description:</strong>
  <%= @pet.description %></p>
  <p class="text-start fs-5 lh-sm"><strong>Special Notes:</strong>
  <%= @pet.special_notes %></p>
  <p class="text-start fs-5"><strong>Price:</strong>
  $<%= @pet.price %></p>
</div>
</div>
</div>
</div>
<div style="width: 100%">
<div class="mx-auto mt-4 rounded-5" style="width: 100%; height: 300px;"
data-controller="map"
data-map-markers-value="<%= @pet_markers.to_json %>"
data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

</div>
</div>
<div>
  <% if policy(@pet).edit? %>
  <%= link_to "Edit this creature", edit_pet_path(@pet) %>
  <% end %>
  <%= button_to "Remove this creature", @pet, method: :delete if policy(@pet).destroy? %>
</div>
